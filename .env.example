# ===========================================
# BEXIO SYNC BUDDY - ENVIRONMENT CONFIGURATION
# ===========================================

# Bexio OAuth Configuration
BEXIO_CLIENT_ID=your_bexio_client_id_here
BEXIO_CLIENT_SECRET=your_bexio_client_secret_here
BEXIO_WEB_REDIRECT_URI=http://localhost:8081/oauth-complete.html
BEXIO_MOBILE_REDIRECT_URI=bexiosyncbuddy://oauth/callback
BEXIO_SERVER_CALLBACK_URI=http://localhost:3001/api/bexio-oauth/callback

# Server Configuration
PORT=3001
SERVER_BASE_URL=http://localhost:3001

# Environment-specific server URLs
VITE_SERVER_URL=http://localhost:3001
VITE_MOBILE_SERVER_URL=http://localhost:3001

# Capacitor Configuration
CAPACITOR_SERVER_URL=http://localhost:3001

# Logging Configuration
LOG_LEVEL=info

# Security Configuration
NODE_ENV=development

# Production URLs (update these for production deployment)
# VITE_SERVER_URL=https://your-production-domain.com
# VITE_MOBILE_SERVER_URL=https://your-production-domain.com
# CAPACITOR_SERVER_URL=https://your-production-domain.com
# SERVER_BASE_URL=https://your-production-domain.com
# BEXIO_WEB_REDIRECT_URI=https://your-production-domain.com/oauth-complete.html
